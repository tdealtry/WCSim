# $Id: GNUmakefile,v 1.17 2006/09/04 15:43:27 t2k Exp $
# --------------------------------------------------------------
# GNUmakefile for examples module.  Gabriele Cosmo, 06/04/98.
# --------------------------------------------------------------

G4DEBUG = 1

name := WCSim
G4TARGET := $(name)
G4EXLIB := true

ifndef G4INSTALL
  G4INSTALL = ../../..
endif

ROOTCFLAGS   := $(shell root-config --cflags) -DUSE_ROOT -fPIC
ROOTLIBS     := $(shell root-config --libs)

LIBNAME := ${WCSIMDIR}

# NOTE: Geant4.7.0 changes the way Maximum Step size is defined.  
# We need extra code for versions 4.7.0 and above; eventually 
# everyone should upgrade to geant4.7
ifneq (,$(findstring 4.7,$(G4INSTALL)))
GEANT4_7_0 = 0
else
GEANT4_7_0 = 1
endif

ifdef GEANT4_7_0
CPPFLAGS += -DGEANT4_7_0
endif

ifdef GCCVERS296
CPPFLAGS += -DUSE_STRSTREAM
endif

#CPPFLAGS  += -I$(ROOTSYS)/include $(ROOTCFLAGS) -std=c++0x -std=c++11           ##for unordered_map 
CPPFLAGS  += -I$(ROOTSYS)/include $(ROOTCFLAGS) -std=c++11           ##for unordered_map 
EXTRALIBS += $(ROOTLIBS)

EXTRA_LINK_DEPENDENCIES := 

DOXYGEN_VERSION := $(shell doxygen --version 2>/dev/null)
ifdef DOXYGEN_VERSION
DOXYGEN_EXISTS = 1
else
DOXYGEN_EXISTS = 0
endif

.PHONY: all
all: rootcint lib bin shared $(WCSIMDIR)/libWCSim.a

# Note dependencies not yet set up right yet

ROOTSO    := ${WCSIMDIR}/libWCSimRoot.so

ROOTSRC  := $(WCSIMDIR)/src/WCSimRootEvent.cc $(WCSIMDIR)/include/WCSimRootEvent.hh $(WCSIMDIR)/src/WCSimRootGeom.cc $(WCSIMDIR)/include/WCSimRootGeom.hh $(WCSIMDIR)/include/WCSimPmtInfo.hh $(WCSIMDIR)/src/WCSimEnumerations.cc $(WCSIMDIR)/include/WCSimEnumerations.hh $(WCSIMDIR)/src/WCSimRootOptions.cc $(WCSIMDIR)/include/WCSimRootOptions.hh $(WCSIMDIR)/src/TJNuBeamFlux.cc $(WCSIMDIR)/include/TJNuBeamFlux.hh $(WCSIMDIR)/src/TNRooTrackerVtx.cc $(WCSIMDIR)/include/TNRooTrackerVtx.hh $(WCSIMDIR)/include/WCSimRootLinkDef.hh

ROOTOBJS  := $(G4WORKDIR)/tmp/$(G4SYSTEM)/WCSim/WCSimRootEvent.o $(G4WORKDIR)/tmp/$(G4SYSTEM)/WCSim/WCSimRootGeom.o $(G4WORKDIR)/tmp/$(G4SYSTEM)/WCSim/WCSimPmtInfo.o $(G4WORKDIR)/tmp/$(G4SYSTEM)/WCSim/WCSimEnumerations.o $(G4WORKDIR)/tmp/$(G4SYSTEM)/WCSim/WCSimRootOptions.o $(G4WORKDIR)/tmp/$(G4SYSTEM)/WCSim/TNRooTrackerVtx.o $(G4WORKDIR)/tmp/$(G4SYSTEM)/WCSim/TJNuBeamFlux.o $(G4WORKDIR)/tmp/$(G4SYSTEM)/WCSim/WCSimRootDict.o 

shared: $(ROOTSRC) $(ROOTOBJS) 
	g++ -shared -O $(ROOTOBJS) -o $(ROOTSO) $(ROOTLIBS)

$(WCSIMDIR)/libWCSim.a : $(ROOTOBJS)
	$(RM) $@
	ar clq $@ $(ROOTOBJS) 

$(WCSIMDIR)/src/WCSimRootDict.cc : $(ROOTSRC)
	rootcint  -f $(WCSIMDIR)/src/WCSimRootDict.cc -c -I$(WCSIMDIR)/include -I$(shell root-config --incdir) WCSimRootEvent.hh WCSimRootGeom.hh  WCSimPmtInfo.hh WCSimEnumerations.hh WCSimRootOptions.hh TJNuBeamFlux.hh TNRooTrackerVtx.hh WCSimRootLinkDef.hh

rootcint: $(WCSIMDIR)/src/WCSimRootDict.cc

doxy:
	@if [ ${DOXYGEN_EXISTS} = 1 ]; \
	then \
		doxygen WCSim_doxygen_config; \
	else\
		echo "Error: doxygen program not found in path. Exiting"; \
	fi

clean_wcsim:
	echo  $(G4WORKDIR); 
	$(RM) -r $(G4WORKDIR); $(RM) *.o *.a *.so *~ */*~ src/WCSimRootDict.h src/WCSimRootDict.cc; 
	@if [ -d "doc/doxygen" ]; \
		then \
		rm -r doc/doxygen; \
	fi	

include $(G4INSTALL)/config/binmake.gmk
